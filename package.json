{
  "name": "hook-a-fish",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently --names \"client,server\" --prefix \"name\" --prefix-colors \"blue,green\" \"npm run client:dev\" \"npm run server:dev\"",
    "client:dev": "npm run dev --workspace=client",
    "server:dev": "npm run dev --workspace=server",
    "build": "npm run client:build && npm run server:build",
    "client:build": "npm run build --workspace=client",
    "server:build": "npm run build --workspace=server",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.0"
  },
  "overrides": {
    "leva": {
      "react": "^19.1.1",
      "react-dom": "^19.1.1"
    },
    "r3f-perf": {
      "@react-three/drei": "^10.7.2"
    }
  }
}
